<%- include('index') %>
<link rel="stylesheet" href="/css/liste_redoublants.css">
<div class="liste-eleves-container">
    <div class="page-title">
        <h1>Gérer la liste des redoublants</h1>
    </div>
    <div class="filter-container">
        <label for="class-filter">Filtrer par classe :</label>
        <select id="class-filter">
            <option value="all">Toutes les classes</option>
            <option value="1ère section maternelle">1ère section maternelle</option>
            <option value="2ème section maternelle">2ème section maternelle</option>
            <option value="3ème section maternelle">3ème section maternelle</option>
            <option value="CP">CP</option>
            <option value="CE1">CE1</option>
            <option value="CE2">CE2</option>
            <option value="CM1">CM1</option>
            <option value="CM2">CM2</option>
        </select>
    </div>    
    <div class="redouble-tables-container">
        <div class="liste-eleves-table">
            <h2>Liste des élèves :</h2>
            <div id="eleves-table">
                <p>Chargement...</p>
            </div>
        </div>

        <div class="liste-redoubles-table">
            <h2>Liste des redoublants :</h2>
            <div id="redoubles-table">
                <p>Chargement...</p>
            </div>
        </div>
    </div>
</div>

<!-- Conteneur caché pour les données -->
<script id="eleves-data" type="application/json">
    <%- JSON.stringify(eleves).replace(/</g, '\\u003c').replace(/>/g, '\\u003e') %>
</script>

<!-- Inclure le script JS -->
<script src="/js/liste_redoublants.js"></script>